<Window x:Class="CyberSecurityApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:pages="clr-namespace:CyberSecurityApp.Pages"
        Title="Cyber Security App" Height="500" Width="850">

    <DockPanel Background="HotPink">

        <!-- Top Buttons -->
        <StackPanel 
            Orientation="Horizontal" 
            DockPanel.Dock="Top" 
            HorizontalAlignment="Center" 
            Margin="10">
            <Button 
                Content="Start Quiz" 
                Width="120" 
                Margin="10" 
                Click="StartQuiz_Click"
                />
            <Button
                Content="Chat with Ultron"
                Width="120" 
                Margin="10" 
                Click="StartChat_Click"
                />
            <Button
                Content="Add Task"
                Width="120" 
                Margin="10" 
                Click="StartTask_Click"
     />
        </StackPanel>
        

        <!-- Main Page Content -->
        <Frame x:Name="MainFrame" 
               NavigationUIVisibility="Hidden" 
               Margin="10"
               />
    </DockPanel>
</Window>
